FROM golang:1.19-alpine3.15 AS builder

WORKDIR /opt

RUN apk add --update ca-certificates build-base git

ENV COMMIT_HASH=d50edeea01c34ac342b6d3f505e29836ccd3a381

RUN git clone https://github.com/umee-network/umee.git \
    && cd umee \
    && git checkout $COMMIT_HASH 

WORKDIR /opt/umee

ADD https://github.com/CosmWasm/wasmvm/releases/download/v1.0.0/libwasmvm_muslc.aarch64.a /lib/libwasmvm_muslc.aarch64.a
ADD https://github.com/CosmWasm/wasmvm/releases/download/v1.0.0/libwasmvm_muslc.x86_64.a /lib/libwasmvm_muslc.x86_64.a
RUN sha256sum /lib/libwasmvm_muslc.aarch64.a | grep 7d2239e9f25e96d0d4daba982ce92367aacf0cbd95d2facb8442268f2b1cc1fc
RUN sha256sum /lib/libwasmvm_muslc.x86_64.a | grep f6282df732a13dec836cda1f399dd874b1e3163504dbd9607c6af915b2740479
RUN cp /lib/libwasmvm_muslc.$(uname -m).a /lib/libwasmvm_muslc.a

RUN LEDGER_ENABLED=false BUILD_TAGS=muslc LINK_STATICALLY=true make build

FROM alpine:3.15
COPY --from=builder /opt/umee/build/umeed /usr/local/bin/
RUN apk add --update bash vim ca-certificates \
    && addgroup -g 1000 umee \
    && adduser -S -h /home/umee -D umee -u 1000 -G umee

USER 1000
WORKDIR /home/umee

EXPOSE 26657 26656 1317 9090
RUN umeed init "umee-1" --chain-id UMEE
RUN umeed keys add ACC_1 --keyring-backend test
RUN umeed add-genesis-account ACC_1 10000000000000000000000uumee --keyring-backend test
RUN umeed gentx ACC_1 1000000uumee --chain-id umee-chain --keyring-backend test
RUN umeed collect-gentxs
CMD ["sh", "-c", "umeed start --minimum-gas-prices 0.1uumee"]
